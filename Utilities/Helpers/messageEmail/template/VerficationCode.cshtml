@model Entity.Dtos.Security.Auth.CodeF2Dto
@{
    var cNavy = "#000928";
    var cBlue = "#3582B9";
    var cIndigo = "#171174";
    var bg = "#F4F6FA";
    var white = "#FFFFFF";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Código de verificación</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background: @bg;
        }

        table {
            border-collapse: collapse;
        }

        .preheader {
            display: none !important;
            visibility: hidden;
            opacity: 0;
            color: transparent;
            height: 0;
            width: 0;
            overflow: hidden;
        }

        @@media only screen and (max-width:600px) {
            .wrapper {
                width: 100% !important;
            }

            .codebox {
                font-size: 22px !important;
                padding: 12px 14px !important;
                letter-spacing: 6px !important;
            }

            .h1 {
                font-size: 20px !important;
            }

            .p {
                font-size: 14px !important;
            }
        }
    </style>
</head>
<body style="background:@bg; font-family:Arial,Helvetica,sans-serif; margin:0;">
    <!-- Preheader (vista previa en clientes de correo) -->
    <div class="preheader">
        Tu código es @Model.Code. Este código es privado; no lo compartas con nadie.
    </div>

    <table role="presentation" width="100%" cellpadding="0" cellspacing="0" border="0" bgcolor="@bg">
        <tr>
            <td align="center" style="padding:24px 12px;">
                <table role="presentation" class="wrapper" width="560" cellpadding="0" cellspacing="0" border="0" style="width:560px; max-width:560px;">
                    <!-- Header -->
                    <tr>
                        <td bgcolor="@cNavy" style="border-radius:12px 12px 0 0; padding:16px 20px;">
                            <!-- Puedes poner tu logo aquí -->
                            <span style="color:#ffffff; font-size:14px; font-weight:600; letter-spacing:.5px;">Verificación de seguridad</span>
                        </td>
                    </tr>

                    <!-- Contenido -->
                    <tr>
                        <td bgcolor="@white" style="padding:28px; border:1px solid #E8EBF0; border-top:none;">
                            <table role="presentation" width="100%" aria-label="Contenido del mensaje">
                                <tr>
                                    <td style="padding-bottom:10px;">
                                        <h1 class="h1" style="margin:0 0 6px 0; font-size:22px; color:@cNavy;">Tu código de verificación</h1>
                                        <p class="p" style="margin:0; font-size:15px; color:#344054;">
                                            Usa este código para continuar con tu proceso.
                                        </p>
                                    </td>
                                </tr>

                                <tr>
                                    <td align="center" style="padding:16px 0 6px 0;">
                                        <div class="codebox" style="
                                            display:inline-block;
                                            background: linear-gradient(180deg, @white, #f7f9fb);
                                            border:2px solid @cBlue;
                                            border-radius:12px;
                                            padding:16px 20px;
                                            font-family:'Courier New', Courier, monospace;
                                            font-size:26px;
                                            letter-spacing:8px;
                                            color:@cIndigo;
                                            font-weight:700;
                                            text-align:center;"
                                             role="textbox" aria-label="Código de verificación">
                                            @Model.Code
                                        </div>
                                    </td>
                                </tr>

                                <!-- Advertencia de privacidad -->
                                <tr>
                                    <td style="padding-top:10px;">
                                        <p class="p" style="margin:0; font-size:14px; color:#475467;">
                                            <strong style="color:@cIndigo;">Este código es privado.</strong> No lo compartas con nadie. Nadie del equipo te lo pedirá por chat, correo o teléfono.
                                        </p>
                                    </td>
                                </tr>

                                <!-- Caducidad (ajusta el tiempo si corresponde) -->
                                <tr>
                                    <td style="padding-top:10px;">
                                        <p class="p" style="margin:0; font-size:13px; color:#667085;">
                                            Por tu seguridad, el código expira en <strong>10 minutos</strong>.
                                        </p>
                                    </td>
                                </tr>

                                <!-- Si no fuiste tú -->
                                <tr>
                                    <td style="padding-top:14px;">
                                        <p class="p" style="margin:0; font-size:13px; color:#667085;">
                                            ¿No fuiste tú? Ignora este mensaje o contáctanos de inmediato.
                                        </p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Footer -->
                    <tr>
                        <td bgcolor="@white" style="border:1px solid #E8EBF0; border-top:none; border-radius:0 0 12px 12px; padding:14px 20px;">
                            <p style="margin:0; font-size:12px; color:#98A2B3;">
                                Este es un mensaje automático. Por favor, no respondas a este correo.
                            </p>
                        </td>
                    </tr>

                </table>
            </td>
        </tr>
    </table>
</body>
</html>

