@model Entity.Dtos.View.UserNewDto
@{
    // Colores SchoolMe
    var cNavy = "#000928";   // fondo/header y títulos
    var cIndigo = "#171174"; // acentos secundarios
    var cBlue = "#3582B9";   // bordes/botones
    var cGold = "#F2C522";   // detalle marca (subrayado/logo)
    var text = "#222222";
    var muted = "#616161";
    var bg = "#F4F6FA";      // gris muy claro de fondo página
    var white = "#FFFFFF";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Bienvenido a SchoolMe</title>
    <style>
        /* Reset básico compatible email */
        body {
            margin: 0;
            padding: 0;
            background: @bg;
        }

        img {
            border: 0;
            outline: none;
            text-decoration: none;
        }

        table {
            border-collapse: collapse;
        }
        /* Responsive simple */
        @@media only screen and (max-width:600px) {
            .wrapper

        {
            width: 100% !important;
        }

        .px {
            padding-left: 16px !important;
            padding-right: 16px !important;
        }

        .h1 {
            font-size: 22px !important;
            line-height: 28px !important;
        }

        }
    </style>
</head>
<body style="margin:0; padding:0; background:@bg;">
    <table role="presentation" width="100%" cellpadding="0" cellspacing="0" border="0" bgcolor="@bg">
        <tr>
            <td align="center" style="padding:24px 12px;">
                <table role="presentation" class="wrapper" width="560" cellpadding="0" cellspacing="0" border="0" style="width:560px; max-width:560px;">
                    <!-- Header -->
                    <tr>
                        <td bgcolor="@cNavy" style="border-radius:12px 12px 0 0; padding:20px 24px;">
                            <table width="100%">
                                <tr>
                                    <td align="left">
                                        <!-- "Logo" tipográfico simple; reemplázalo por <img> si tienes logo -->
                                        <div style="font-family:Arial,Helvetica,sans-serif; font-size:18px; color:@white; font-weight:700;">
                                            SchoolMe <span style="color:@cGold;">●</span>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Body -->
                    <tr>
                        <td bgcolor="@white" class="px" style="padding:28px 28px 8px; border:1px solid #E8EBF0; border-top:none;">
                            <h1 class="h1" style="margin:0 0 12px; font-family:Arial,Helvetica,sans-serif; font-size:24px; line-height:32px; color:@cNavy;">
                                ¡Bienvenido, @Model.NamePerson!
                            </h1>

                            <p style="margin:0 0 16px; font-family:Arial,Helvetica,sans-serif; font-size:14px; line-height:22px; color:@text;">
                                Tu cuenta ha sido creada exitosamente en <strong>SchoolMe</strong>.
                            </p>

                            <!-- Bloque credenciales -->
                            <table role="presentation" width="100%" cellpadding="0" cellspacing="0" border="0" style="margin:8px 0 16px;">
                                <tr>
                                    <td style="border:1px solid @cBlue; border-radius:10px; padding:14px 16px;">
                                        <p style="margin:0 0 8px; font-family:Arial,Helvetica,sans-serif; font-size:14px; line-height:20px; color:@text;">
                                            <strong style="color:@cIndigo;">Usuario:</strong>
                                            <a href="mailto:@Model.Email" style="color:@cBlue; text-decoration:none;">@Model.Email</a>
                                        </p>
                                        <p style="margin:0; font-family:Arial,Helvetica,sans-serif; font-size:14px; line-height:20px; color:@text;">
                                            <strong style="color:@cIndigo;">Contraseña:</strong> @Model.Password
                                        </p>
                                    </td>
                                </tr>
                            </table>

                            <p style="margin:0 0 20px; font-family:Arial,Helvetica,sans-serif; font-size:13px; line-height:20px; color:@muted;">
                                Por seguridad, cambia tu contraseña al iniciar sesión.
                            </p>

                            <!-- Botón (opcional) -->
                            <table role="presentation" cellpadding="0" cellspacing="0" border="0" align="left" style="margin:0 0 24px;">
                                <tr>
                                    <td bgcolor="@cBlue" style="border-radius:8px;">
                                        <a href="https://app.schoolme.com/login"
                                           style="display:inline-block; padding:12px 18px; font-family:Arial,Helvetica,sans-serif; font-size:14px; color:@white; text-decoration:none; font-weight:700;">
                                            Ir a iniciar sesión
                                        </a>
                                    </td>
                                </tr>
                            </table>

                            <p style="clear:both; margin:0 0 8px; font-family:Arial,Helvetica,sans-serif; font-size:14px; line-height:22px; color:@text;">
                                Atentamente,<br />
                                Equipo SchoolMe
                            </p>
                        </td>
                    </tr>

                    <!-- Footer -->
                    <tr>
                        <td bgcolor="@white" style="border:1px solid #E8EBF0; border-top:none; border-radius:0 0 12px 12px; padding:12px 24px;">
                            <p style="margin:0; font-family:Arial,Helvetica,sans-serif; font-size:12px; line-height:18px; color:@muted;">
                                © @DateTime.UtcNow.Year SchoolMe. Todos los derechos reservados.
                            </p>
                        </td>
                    </tr>

                </table>
            </td>
        </tr>
    </table>
</body>
</html>